<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Memory_App.HomePage">
 
    <VerticalStackLayout
        Padding="30,30"
        Spacing="100"
        VerticalOptions="CenterAndExpand"
        HorizontalOptions="CenterAndExpand">

        <Label
         Text="Home"
         Margin="0,0,0,0"
         Style="{StaticResource Headline}"
         SemanticProperties.HeadingLevel="Level1" />

        <Button
            Text="Add Memory"
            SemanticProperties.Hint="Add Memory"
            Clicked="OnAddMemoryClicked"
            WidthRequest="300"
            HeightRequest="60"/>

        <Button
            Text="View All"
            SemanticProperties.Hint="View All"
            WidthRequest="300"
            HeightRequest="60"/>

        <Button
            Text="Search"
            SemanticProperties.Hint="Search"
            WidthRequest="300"
            HeightRequest="60"/>

    </VerticalStackLayout>

</ContentPage>
